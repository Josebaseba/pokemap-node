<div id="admin-view">

  <h3 class="text-center">Admin</h3>

  <h4 class="text-center">Connected Users: <span class="total-connected"></span></h4>

  <div class="panel panel-default">
    <h4 class="text-center panel-heading">Users - <span class="h4 total-users">0</span></h4>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Actived</th>
          <th>Admin</th>
          <th>Status</th>
          <th>Message</th>
        </tr>
      </thead>
      <tbody class="users"></tbody>
    </table>
  </div>

</div>

<script type="text/template" class="user">

  <td>{{{ name }}}</td>
  <td>{{{ email }}}</td>
  <td>{{{ actived }}}</td>
  <td>{{{ admin }}}</td>
  <td {{# if(status === 'online'){ }} style="color: #A0D468" {{# } }}>{{{ status }}}</td>
  <td>{{{ message }}}</td>
  <td>{{{ String(new Date(createdAt)).substring(0, 24) }}}</td>
  <td>
    {{# if(!actived){ }}
      <button type="button" class="edit-activation btn btn-success btn-block">Activar</button>
    {{# }else{ }}
      <button type="button" class="edit-activation btn btn-danger btn-block">Desactivar</button>
    {{# } }}
  </td>


</script>
